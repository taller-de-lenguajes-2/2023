
@model MVC.ViewModels.ProductoViewModel

<form asp-controller="Producto" asp-action="EditarProducto">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-for="@Model.Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Precio"></label>
        <input asp-for="@Model.Precio" class="form-control" />
        <span asp-for="@Model.Nombre" class="form-control" />
    </div>
    <button type="submit">Enviar</button>
</form>